<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:id="@+id/backgroung_home"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tasks_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/backgroung_home"
        android:gravity="bottom"
        android:background="@color/colorPrimary"
        android:alpha="0.8"
        android:padding="@dimen/element_spacing_medium"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/jetBlack"
            android:text="@string/main_welcome_title" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/element_spacing_normal"
            android:textSize="@dimen/text_size_medium"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/jetBlack"
            android:text="@string/main_subtitle" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_marginTop="@dimen/element_spacing_micro"
        android:layout_below="@+id/backgroung_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</RelativeLayout>